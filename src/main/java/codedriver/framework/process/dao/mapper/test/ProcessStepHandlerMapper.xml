<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.framework.process.dao.mapper.test.ProcessStepHandlerMapper">
	<select id="getActiveProcessStepHandler" resultType="codedriver.module.process.dto.ProcessStepHandlerVo">
		SELECT
		`type`,
		`name`,
		`is_active` AS isActive,
		`sort`,
		`icon`
		FROM
		`process_step_handler`
		WHERE
		is_active = 1
		ORDER BY sort
	</select>

	<update id="resetProcessStepHandler">
		UPDATE
		`process_step_handler`
		SET
		`is_active` = 0
	</update>

	<insert id="replaceProcessStepHandler" parameterType="codedriver.module.process.dto.ProcessStepHandlerVo">
		REPLACE INTO `process_step_handler` (
		`type`,
		`name`,
		`is_active`,
		`sort`,
		`icon`
		)
		VALUES
		(
		#{type},
		#{name},
		#{isActive},
		#{sort},
		#{icon}
		)
	</insert>
</mapper>