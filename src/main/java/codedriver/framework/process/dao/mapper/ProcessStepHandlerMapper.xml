<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.framework.process.dao.mapper.ProcessStepHandlerMapper">
	<select id="getProcessStepHandlerConfig" resultType="codedriver.module.process.dto.ProcessStepHandlerVo">
		SELECT
		`handler`,
		`config`
		FROM `process_step_handler`
	</select>

	<update id="updateProcessStepHandlerConfig" parameterType="codedriver.module.process.dto.ProcessStepHandlerVo">
		UPDATE `process_step_handler` SET `config` = #{config} WHERE `handler` = #{handler}
	</update>

	<delete id="deleteProcessStepHandlerConfigByHandler" parameterType="string">
		DELETE FROM `process_step_handler` WHERE `handler` = #{value}
	</delete>
</mapper>