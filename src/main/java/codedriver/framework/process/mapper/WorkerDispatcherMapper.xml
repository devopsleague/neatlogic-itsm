<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.techsure.balantflow.process.mapper.WorkerDispatcherMapper">
	<select id="getAllActiveWorkerDispatcher" resultType="com.techsure.balantflow.process.dto.WorkerDispatcherVo">
		SELECT
		`name`,
		`handler`,
		`config_page` AS configPage,
		`is_active` AS isActive,
		`help`
		FROM
		`process_step_worker_dispatcher`
		WHERE is_active = 1
	</select>

	<update id="resetWorkerDispatcher">
		UPDATE
		`process_step_worker_dispatcher`
		SET
		`is_active` = 0
	</update>

	<insert id="replaceWorkerDispatcher" parameterType="com.techsure.balantflow.process.dto.WorkerDispatcherVo">
		REPLACE INTO `process_step_worker_dispatcher` (
		`name`,
		`handler`,
		`config_page`,
		`is_active`,
		`help`
		)
		VALUES
		(
		#{name},
		#{handler},
		#{configPage},
		#{isActive},
		#{help}
		)
	</insert>
</mapper>